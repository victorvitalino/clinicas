  %tbody
    - @clinics.each do |clinic|
      %tr
        %td= clinic.name
        %td= clinic.cnpj
        %td= clinic.social_name
        %td= clinic.fantasy_name
        %td= clinic.address
        %td= clinic.neighborhood
        %td= clinic.city
        %td= clinic.state
        %td= clinic.cep
        %td= clinic.phone
        %td= clinic.fax
        %td= clinic.celphone
        %td= clinic.representative_name
